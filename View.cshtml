@page
@model CroatianProject.Pages.ViewModel
@{
    ViewData["Title"] = "Просмотр корпуса";
}
    <div>
        <form method="post">
            <select asp-for="textName">
                @foreach (var text in Model.textList)
                {
                    <option>@text</option>
                }
            </select>
            <button asp-page-handler="show">Вывести слова в порядке появления</button>
            <button asp-page-handler="showAlphabetically">Вывести слова в алфавитном порядке</button>
        </form>
    </div>
