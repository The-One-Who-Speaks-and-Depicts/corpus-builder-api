@page
@model CroatianProject.Pages.ViewModel
@{
    ViewData["Title"] = "Просмотр корпуса";
}

    <div style="margin-top:25px;">
        <form method="post">
            <textarea style="text-wrap:none; white-space:nowrap; resize:none;" rows="1" cols="20" asp-for="wordSearched"></textarea><br />
            <select asp-for="textName">
                @foreach(var text in Model.textList)
                {
                    <option>@text</option>
                }
            </select>
            <select asp-for="PoS">
                @foreach(var part in Model.partsOfSpeech)
                {
                    <option>@part</option>
                }
            </select><br />
            <button asp-page-handler="show">Вывести слова в порядке появления</button><br />
            <button asp-page-handler="showAlphabetically">Вывести слова в алфавитном порядке</button><br />
        </form>
    </div>

<div align="center">
    <table>
        @foreach (var word in Model.wordsWithTags)
        {
            <tr><td align="left">@word.Key</td><td align="right">@word.Value</td></tr>
        }
    </table>
</div>
<div style="clear:both;"></div>
