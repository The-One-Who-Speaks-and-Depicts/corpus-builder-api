@page
@model CroatianProject.Pages.ViewModel
@{
    ViewData["Title"] = "Просмотр корпуса";
}
<script src="~/js/featureAdditionController.js"></script>

<div style="margin-top:25px;">
    <select id="keys">
        @foreach (var part in Model.fieldsList)
        {
            <option>@part</option>
        }
    </select>
    <select id="thisFieldValues">
        <option>Any</option>
    </select>
    <input id="isNegative" type="checkbox" value="Искать слова без этого признака" />
    <button id="addFeature">Добавить признак</button><br />
    <form method="post">
        <div id="values" style="display:none;">
            @foreach (var field in Model.fieldsList)
            {@field}
    </div>
    <textarea style="text-wrap:none; white-space:nowrap; resize:none;" rows="1" cols="20" asp-for="wordSearched"></textarea><br />
    <select asp-for="textName">
        @foreach (var text in Model.textList)
        {
            <option>@text</option>
        }
    </select>
    <textarea style="text-wrap:none; white-space:nowrap; resize:none;" rows="1" cols="20" id="feature" asp-for="feature"></textarea><br />
    <button asp-page-handler="show">Вывести слова в порядке появления</button><br />
    <button asp-page-handler="showAlphabetically">Вывести слова в алфавитном порядке</button><br />
</form>
</div>

<div align="center">



    @for (int i = 0; i < Model.wordsWithTags.Count; i++)
    {
    <div style="width:@(100/Model.wordsWithTags.Count)%;float:left;">
        @for (int j = 0; j < Model.wordsWithTags[i].Count; j++)
        {
            @foreach (var item in Model.wordsWithTags[i][j])
            {
                @item.Key
            }
            <br />
        }
    </div>
    }

</div>
<div style="clear:both;"></div>
