@page
@model CroatianProject.Pages.ViewTextModel
@{
    ViewData["Title"] = "ViewText";
}

<html>
<head>
    <script src="~/js/wordEditingController.js"></script>
    <script src="~/js/featureShowController.js"></script>
</head>
<body>
    <h2>Просмотр текста</h2>
    <div id="values" style="display:none;">@foreach (var field in Model.fieldsList) {@(field + "|")}</div>
    <div style="margin-top:25px;">
        <form align="center" asp-page-handler="show" method="post">
            <select asp-for="textName">
                @foreach (var text in Model.textList)
                {
                    <option>@text</option>
                }
            </select>
            <button>Показать текст</button><br />
        </form><br /><br /><br />
        
    </div>

    <div>
        <div align="center" style="float:left; width:50%;">            
            @foreach (var word in Model.textByWords)
            {
                @Html.Raw(word)
            }
        </div>
        <div align="center" style="float:right; width:50%;">
            <button id="showFeature">Добавить признак</button><br /><br />
            <select id="keys"></select>
            <select id="fieldValues"></select>
            <input id="isNegative" type="checkbox" value="Искать слова без этого признака" /><br />
            <button id="addFeature">Добавить значение в последнее поле</button><br /><br />

            <div id="features"></div>

        </div>
    </div>
    <div style="clear:both;"></div>
</body>
</html>


