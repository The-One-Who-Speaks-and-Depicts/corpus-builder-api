@page
@model CroatianProject.Pages.AddTextModel
@{
    ViewData["Title"] = "AddText";
}

<h2>AddText</h2>
<div style="min-width:500px; width:100%;">
    <form method="post" enctype="multipart/form-data">
        <input type="file" class="btn btn-default" asp-for="Upload" />
        <input type="text" asp-for="filePath" />
        <input type="submit" class="btn btn-default" />
    </form>
</div>


<div style="min-width:500px; width:100%;">

    <div style="min-height:300px; min-width:250px; width:50%; float:left;">
        <iframe src="@Model.filePath" style="min-height:300px; height:435px; min-width:250px; width:100%;"></iframe>
    </div>

    <div style="min-height:300px; height:450px; min-width:250px; width:50%; float:right;" align="right">
        <form asp-page-handler="process" method="post">
            <div>
                <textarea cols="@Model.Cols" rows="@Model.Rows" asp-for="processedString"></textarea><br />
                <input type="submit" class="btn btn-default" />
            </div>
        </form>

    </div>
</div>

<div style="clear:both;"></div>
