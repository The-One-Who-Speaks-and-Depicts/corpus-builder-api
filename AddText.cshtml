@page
@model CroatianProject.Pages.AddTextModel
@{
    ViewData["Title"] = "Загрузить текст";
}

<h2 align="center"> Загрузить текст</h2>
<div style="min-width:500px; width:100%; margin-bottom:60px; margin-right:30px;" align="center"><br /><br />
    <form method="post" enctype="multipart/form-data">
        <div align="center">Путь к pdf-файлу на вашем компьютере:</div><br />
        <input type="file" class="btn btn-default" asp-for="Upload" /><br />
        <div align="center">Путь к pdf-файлу в Google Docs:</div><br />
        <input type="text" asp-for="filePath" /><br />
        <div align="center">Название текста:</div><br />
        <div align="center"><input type="text" asp-for="textName" /><br /><br /></div>
        <input type="submit" class="btn btn-default" />
    </form>
</div>


<div style="min-width:500px; width:100%;">

    <div style="min-height:300px; height:485px; min-width:250px; width:50%; float:left;">
        <iframe src="@Model.filePath" style="min-height:300px; height:485px; min-width:250px; width:100%;"></iframe>
    </div>

    <div style="min-height:300px; height:450px; min-width:250px; width:50%; float:right;" align="center">
        <form asp-page-handler="process" method="post">            
            <div>                
                <div align="center">Текст:</div><br />
                <textarea cols="@Model.Cols" rows="@Model.Rows" asp-for="processedString">Текст</textarea><br />
                <input type="submit" class="btn btn-default" />
            </div>
        </form>

    </div>
</div>

<div style="clear:both;"></div>
