@page
@model CroatianProject.Pages.AddTextModel
@{
    ViewData["Title"] = "AddText";
}

<h2>AddText</h2>

<form method="post" enctype="multipart/form-data">
    <input type="file" class="btn btn-default" asp-for="Upload" />
    <input type="submit" class="btn btn-default"/> <div>@Model.ExceptionMessage</div>
</form>

<form asp-page-handler="process" method="post" >
    <div>
        <textarea cols="@Model.Cols" rows="@Model.Rows" asp-for="processedString"></textarea><br />
        <div style="margin:0px 0px 0px 150px;"><button class="btn btn-default">Process</button> <br /></div>
    </div>
</form>

