@page
@model CroatianProject.Pages.ViewModel
@{
    ViewData["Title"] = "Просмотр корпуса";
}
<script src="https://yastatic.net/jquery/3.3.1/jquery.min.js"></script>
<script src="~/js/featureAdditionController.js"></script>


<div style="margin-top:25px;">
    <select id="keys">
        <option>Any</option>
    </select><br />
    <select id="thisFieldValues" style="opacity:0;">
        <option>Any</option>
    </select><br />
    <textarea id="userValue" cols="15" style="opacity:0;"></textarea><br />
    <input id="isNegative" type="checkbox" value="Искать без этого признака" />
    <label id="isNegativeLabel" for="isNegative">Искать единицы без этого признака</label><br/>
    <button id="addFeature">Добавить признак</button><br />
    <form method="post">
        <div id="values" style="display:none;">
            @foreach (var field in Model.fieldsList)
            {@field}
    </div>
    <textarea style="text-wrap:none; white-space:nowrap; resize:none;" rows="1" cols="20" asp-for="wordSearched"></textarea><br />
    <select asp-for="docName">
        <option>Any</option>
        @foreach (var doc in Model.scriptList)
        {
            <option>@doc</option>
        }
    </select>
    <textarea style="text-wrap:none; white-space:nowrap; resize:none;" rows="3" cols="40" id="feature" asp-for="feature"></textarea><br />
    <button asp-page-handler="show">Вывести слова в порядке появления</button><br />
    <button asp-page-handler="showAlphabetically">Вывести слова в алфавитном порядке</button><br />
</form>
</div>

<div align="center">



    @for (int i = 0; i < Model.wordsWithTags.Count; i++)
    {@Html.Raw(Model.wordsWithTags[i])}

</div>
<div style="clear:both;"></div>
