@page
@model CroatianProject.Pages.Admin.AddDocumentModel
@{
    ViewData["Title"] = "Загрузить документ";
}

<html>
<head>
    <script src="https://yastatic.net/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/js/documentTagging.js"></script>
</head>
    <body>
        <div style="min-width:500px; width:100%; margin-bottom:60px; margin-right:30px;" align="center">
            <br /><br />
                  <form method="post" enctype="multipart/form-data">
                      <div align="center">Путь к pdf-файлу на вашем компьютере:</div><br />
                      <input type="file" class="btn btn-default" asp-for="Upload" /><br />
                      <div align="center">Путь к pdf-файлу в Google Docs:</div><br />
                      <input type="text" asp-for="filePath" /><br />
                      <div align="center">Название документа:</div><br />
                      <div align="center"><input type="text" asp-for="textName" /><br /><br /></div>
                      <div id="values" style="display:none">
                          @try
                          {
                              foreach (var field in Model.FieldList)
                              {
                                  @if (field != "Any")
                                  {
                                      @(field + "|")
                                  }
                              }
                          }
                          catch
                          {

                          }
                      </div>
                      <div align="center">Поля:</div><br />
                      <select id="keys">
                          <option>Any</option>
                      </select> <br> <br />
                      <select id="thisFieldValues" style="opacity:0.0">
                          <option>Any</option>
                      </select> <br />
                      <textarea id="userValue" style="opacity:0.0" rows="1" cols="25"></textarea> <br /> <br />
                      <button id="submit" type="button">Добавить поле</button><br /><br />
                      <div id="connected"></div> <br /> <br />
                      <button id="clear" type="button">Очистить поле ввода</button><br />
                      <textarea rows="20" cols="50" id="connections" asp-for="connections" readonly></textarea><br />
                      <input type="submit" class="btn btn-default" />
                  </form>
        </div>
    </body>
</html>
