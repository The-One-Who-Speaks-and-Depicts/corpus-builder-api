@page
@model CroatianProject.Pages.Admin.AddFeatureModel
@{
    ViewData["Title"] = "Анализ";
}
<html>
<head>
    <script src="~/js/wordEditingController.js"></script>
</head>
<body>
    <div id="values" style="display:none;">@foreach (var field in Model.fieldsList){@field}</div>
    <h2>Добавление признаков в текст</h2>
    <form align="center" asp-page-handler="show" method="post">
        <select asp-for="textName">
            @foreach (var text in Model.textList)
            {
                <option>@text</option>
            }
        </select>
        <button>Показать текст</button><br />
    </form><br /><br /><br />

    <div>
        <div align="center" style="float:left; width:50%;">
            @foreach (var word in Model.textByWords)
            {
                @Html.Raw(word)
            }
        </div>

        <div align="center" style="float:right;width:50%;">
            <form method="post">
                <textarea id="identificator" style="display:none;" asp-for="currentWordId"></textarea>
                <div id="info"></div>
                <textarea id="fieldInfo" style="display:none;" asp-for="isFieldMultiple"></textarea>
                <select id="keys" asp-for="currentField"></select>
                <select id="thisFieldValues" asp-for="currentFieldValue"></select>                
                <button asp-page-handler="change">Добавить признак</button>
            </form>
        </div>
    </div>
        <div style="clear:both;"></div>

</body>
</html>


